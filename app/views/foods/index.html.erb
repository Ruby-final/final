<span style="font-family:Microsoft JhengHei;">
<h1 class="mt-3">食譜清單
<%= link_to '新增食譜', new_food_path, class: "btn btn-xs btn-success float-right" %>
</h1>
<table class="table">
  <thead>
    <tr>
      <th>Image</th>
      <th>Name</th>
      <th>Owner</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @foods.each do |food| %>
      <tr>
        <td><%= link_to image_tag(food.image_url, :width => '200px', :height => '100px'), food if food.image.present?%></td>
        <td><%= link_to food.name, food %></td>
        <td><%= food.user.display_name %></td>
        <td><%= link_to '編輯', edit_food_path(food) if can? :update, food %></td>
        <td><%= link_to '刪除', food, method: :delete, data: { confirm: 'Are you sure?' } if can? :destroy, food  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</span>


