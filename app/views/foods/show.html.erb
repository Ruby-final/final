<div class="row">
	<div class="col-sm">
	  <div class="card mx-2 my-3">
	    <div class="card-body">
	    	<div class="col-sm">
	    		<%= image_tag(@food.image_url, :width => 450) if @food.image.present? %>
	      	<h5 class="card-title mt-2"><%= @food.name %></h5>
	      </div>
	    </div>
	  </div>
	</div>
	<div class="jumbotron col-sm my-3 bg-white">
	  <h1 class="display-4"><%= @food.name %></h1>
	  <hr class="my-4">
	  <p class="lead"><%= @food.description %></p>
	</div>
</div>

<ul class="nav nav-tabs my-3" id="myTab" role="tablist">
  <li class="nav-item">
    <a class="nav-link active" id="home-tab" data-toggle="tab" href="#new" role="tab" aria-controls="new" aria-selected="true">食材</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" id="profile-tab" data-toggle="tab" href="#seminar" role="tab" aria-controls="seminar" aria-selected="false">步驟</a>
  </li>
</ul>
<div class="tab-content" id="myTabContent">
  <div class="tab-pane fade show active" id="new" role="tabpanel" aria-labelledby="news-tab">
    <%= @food.ingredient %>
  </div>
  <div class="tab-pane fade" id="seminar" role="tabpanel" aria-labelledby="seminar-tab">
  	<%= @food.step %>
  </div>
</div>
<div class="row py-3">
	<div class="col">
	<%= link_to 'Edit', edit_food_path(@food), class: "btn btn-xs btn-secondary float-right mx-2" %>
	<%= link_to 'Back', foods_path , class: "btn btn-xs btn-secondary float-right" %>
	</div>
</div>

