<span style="font-family:Microsoft JhengHei;">
<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner float-center">
    <div class="carousel-item active">
    <%= image_tag("食譜1.png" , :class => "d-block w-100 w-sm-50" )  %>
    </div>
    <div class="carousel-item">
      <%= image_tag("食譜2.png" , :class => "d-block w-100 w-sm-50")  %>
    </div>
    <div class="carousel-item">
      <%= image_tag("食譜3.png" , :class => "d-block w-100 w-sm-50")  %>
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev"  >
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next" >
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

<div class="row ml-2">
  <% @foods.each do |food| %>
    <div class="col-xs-4">
      <div class="card mx-2 my-3" style="width: 350px;">
        <div class="card-body">
        <%= link_to image_tag(food.image_url, :width => '300px', :height => '200px'), food if food.image.present?%>
          <h5 class="card-title"><%= link_to food.name, food_path(food) %></h5>
          <p class="card-text"><%= food.description %></p>
          <%= link_to '詳細資料', food_path(food), class: "btn btn-xs btn-primary float-right" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
<%= paginate @foods %>
</span>
